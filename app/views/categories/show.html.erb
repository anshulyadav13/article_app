<div class="container mt-2">
    <h1  class="text-center mt-3"><%= @category.name  %> Category</h1>
    <div class="d-flex justify-content-center mt-4">
        <% if logged_in? && current_user.admin? %>
            <%= link_to 'Edit Category Name' , edit_category_path(@category) ,class:" preview-card__button flash-message-bg mx-1  " %>
        <% end %>
    </div>
     <% if @category.articles.any?  %>
    <%= render 'articles/articles_card' %>
     <div class="apple_pagination">
         <%= will_paginate @articles, :container => false %>
     </div>
    <% else %>
     <h3 class="text-center mt-3 text-warning"> No Article Created </h3>
    <% end %>
</div>