<% flash.each do |name,msg|%>
  <div class="alert   alert-dismissible fade show container mt-3 <%= name=="alert" ? "bg-warning text-dark" : "bg-success" %>" role="alert">
   <strong > <%= msg %></strong>  
   <button type="button" class="close" data-dismiss="alert" aria-label="Close">
     <span aria-hidden="true">&times;</span>
   </button>
</div>
<%end%>