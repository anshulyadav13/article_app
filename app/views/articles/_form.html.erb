<div class="p-4">
  <%= form_with(model: @article,local:true) do |f| %>
     <div class="form-group ">
          <%= f.label :title ,class:"text-dark"%> 
          <%= f.text_field :title,class:"form-control ", placeholder:"enter article title" %>
     </div>
     <div class="form-group">
          <%= f.label :description,class:"text-dark" %> 
          <%= f.text_area :description ,rows: 4,class:"form-control", placeholder:"enter article description" %> 
     </div>
     <div class="form-group">
          <%= f.label :category ,class:"text-dark" %> 
          <%= f.collection_select(:category_ids, Category.all, :id, :name,
          {prompt: "Select Article Categories (Can be empty)"}, {multiple: true,class: "custom-select",size:4} ) %>
     </div>
     <div class="d-flex justify-content-center"> 
          <%= f.submit class: 'preview-card__button   mx-2'%>
          <%= link_to 'See All Articles', articles_path ,class:"preview-card__button  " %>
     </div> 
  <% end %>
</div>