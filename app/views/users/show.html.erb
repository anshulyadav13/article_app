<div class="container mt-2">
    <h1  class="text-center mt-3"><%= @user.user_name.capitalize  %>'s  profile</h1>
    <%= load_profile_image %>
    <% if logged_in? && (@user == current_user || current_user.admin?) %>
     <div class="d-flex justify-content-center mt-4">
        <%= link_to 'Edit Profile', edit_user_path(@user) ,class:"preview-card__button flash-message-bg mx-1  " %>
        <%= link_to 'Delete Profile', user_path(@user) ,method: :delete,data: {confirm: "Are you Sure ?"},class:"preview-card__button   bg-danger  " %>
     </div>
    <% end %>
   <% if @user.articles.any?  %>
    <h3 class="text-center mt-3 ">All Articles Created by <%=@user.user_name.capitalize%> </h3>
    <% else %>
     <h3 class="text-center mt-3 text-warning"> No Article Created </h3>
    <% end %>
     <%= render 'articles/articles_card' %>
     <div class="apple_pagination">
         <%= will_paginate @articles, :container => false %>
     </div>

</div>