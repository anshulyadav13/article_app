<h2 class="text-white text-center mt-3">Log In</h2>
<div class="container mt-4 bg-card">
 <div class="p-4">
 
<%= form_with scope: :sessions ,url: login_path ,local: true do |f| %>
 
  <div class="form-group">
    <%= f.label :email ,class:"text-dark"%> 
      <%= f.text_field :email,class:"form-control", placeholder:"enter email id"%> 
  </div>
  <div class="form-group">
    <%= f.label :password,class:"text-dark" %> 
     <%=  f.password_field :password,class:"form-control", placeholder:"enter passowrd" %> 
  </div>
 <div class="d-flex justify-content-center"> 
         <%= f.submit "Login" , class: 'preview-card__button   mx-2'%>
 <%= link_to 'See All Articles', articles_path ,class:"preview-card__button  " %>
</div>

  
  
<% end %>
</div>
</div>